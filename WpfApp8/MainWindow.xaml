<Window x:Class="WpfApp8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="1.3*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.ColumnSpan="3" Text="Zoo" FontSize="60" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock Grid.Row="1" Grid.Column="1" Text="Name: " FontSize="22" Margin="0,0,0,10" HorizontalAlignment="Left"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="Birth: " Margin="0,0,0,10" FontSize="22" HorizontalAlignment="Left"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="Type: " FontSize="22" Margin="0,0,0,10" HorizontalAlignment="Left"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="Gender: " FontSize="22" Margin="0,0,0,10" HorizontalAlignment="Left"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="Weight: " FontSize="22" Margin="0,0,0,10" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="2" >
            <TextBox x:Name="name" Width="220" Height="30" FontSize="22" Margin="0,0,0,10" HorizontalAlignment="Left"/>
            <TextBox x:Name="birth" Width="220" Height="30" FontSize="22" Margin="0,0,0,10" HorizontalAlignment="Left"/>
            <TextBox x:Name="type" Width="220" Height="30" FontSize="22" Margin="0,0,0,10" HorizontalAlignment="Left"/>
            <TextBox x:Name="gender" Width="220" Height="30" FontSize="22" Margin="0,0,0,10" HorizontalAlignment="Left"/>
            <TextBox x:Name="weight" Width="220" Height="30" FontSize="22" Margin="0,0,0,10" HorizontalAlignment="Left"/>
            <Button Content="Submit" Click="submit" Width="100" Height="40" FontSize="22" HorizontalAlignment="Left"/>
        </StackPanel>
        <Button Grid.Row="1" x:Name="ShowAnimals" Click="show" Content="Show" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <StackPanel Grid.Row="1" Grid.Column="0">
            <!--<ListBox  FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Height="250"/>-->
            <StackPanel x:Name="showAnimals">
                
            </StackPanel>
            <!--ListView Name="myL" Grid.Row="1">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Birth" DisplayMemberBinding="{Binding Birth}"/>
                        <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Type}"/>
                        <GridViewColumn Header="Gender" DisplayMemberBinding="{Binding Gender}"/>
                        <GridViewColumn Header="Weight" DisplayMemberBinding="{Binding Weight}"/>
                    </GridView>
                </ListView.View>
            </ListView>-->
        </StackPanel>
       
    </Grid>
</Window>
